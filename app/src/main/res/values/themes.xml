<resources>

    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/zla_primary</item>
        <item name="colorPrimaryDark">@color/zla_primary</item>
        <item name="colorAccent">#197DCA</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#64FFDA</item>
        <item name="android:windowBackground">@color/zla_primary_background</item>
    </style>

    <style name="Theme.Main" parent="Theme.Base" />

    <style name="CommonDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/CommonDialogCorners</item>
    </style>

    <style name="CommonDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CommonDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/zla_scale_up</item>
        <item name="android:windowExitAnimation">@anim/zla_scale_down</item>
    </style>

</resources>