<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryText">
        <item name="android:textColor">@color/zla_primary_text</item>
    </style>

    <style name="NormalText" parent="@style/PrimaryText">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="BoldText" parent="@style/PrimaryText">
        <item name="android:fontFamily">@font/archivo_bold</item>
    </style>

    <style name="T10N" parent="@style/NormalText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="T12N" parent="@style/NormalText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="T14N" parent="@style/NormalText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="T16N" parent="@style/NormalText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="T18N" parent="@style/NormalText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="T20N" parent="@style/NormalText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="T24N" parent="@style/NormalText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="T28N" parent="@style/NormalText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="T32B" parent="@style/BoldText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/zla_primary_text</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/zla_common_edit_text_height</item>
        <item name="android:background">@drawable/zla_bg_common_edit_text</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColorHint">@color/zla_primary_hint</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/zla_common_button_height</item>
        <item name="android:backgroundTint">@drawable/zla_bg_primary_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>