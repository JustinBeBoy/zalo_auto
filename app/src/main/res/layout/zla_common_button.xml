<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_height="@dimen/zla_common_button_height"
        tools:background="@drawable/zla_bg_common_button_filled"
        tools:gravity="center"
        tools:layout_margin="16dp"
        tools:layout_width="match_parent"
        tools:orientation="horizontal"
        tools:paddingHorizontal="@dimen/zla_common_button_padding_horizontal"
        tools:parentTag="android.widget.LinearLayout">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView"
            style="@style/T16N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/zla_continue" />

    </merge>

</layout>