<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <merge
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zla_on_off_view_height"
        android:background="@drawable/zla_bg_on_off"
        android:orientation="horizontal"
        tools:layout_margin="16dp"
        tools:parentTag="android.widget.LinearLayout">

        <TextView
            android:id="@+id/tvOff"
            style="@style/T14N"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zla_bg_off"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="@string/zla_off"
            android:textColor="@color/zla_text_on_off" />

        <TextView
            android:id="@+id/tvOn"
            style="@style/T14N"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/zla_bg_on"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="@string/zla_on"
            android:textColor="@color/zla_text_on_off" />

    </merge>

</layout>