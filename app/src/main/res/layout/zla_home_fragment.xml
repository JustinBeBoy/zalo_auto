<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.quick_reply.presentation.ui.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/onOffView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/onOffView"
            app:srcCompat="@drawable/zla_ic_settings" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/onOffView"
            app:layout_constraintStart_toEndOf="@id/ivSettings"
            app:layout_constraintTop_toTopOf="@id/onOffView"
            app:srcCompat="@drawable/zla_ic_alarm" />

        <com.example.quick_reply.presentation.widget.toggle.OnOffView
            android:id="@+id/onOffView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zla_on_off_view_height"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@id/onOffView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/onOffView"
            app:srcCompat="@drawable/zla_ic_account" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onOffView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="21dp"
                android:background="@drawable/zla_bg_white_rounded_8">

                <com.example.quick_reply.presentation.widget.setting.SwitchSettingView
                    android:id="@+id/switchSkipPleaseChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="@={viewModel.isSkipPleaseChange}"
                    android:text="@string/zla_skip_please_change"
                    app:isVisibleDivider="true"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.example.quick_reply.presentation.widget.setting.SwitchSettingView
                    android:id="@+id/switchSkip7Seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="@={viewModel.isSkip7Seats}"
                    android:text="@string/zla_skip_7_seats"
                    app:layout_constraintTop_toBottomOf="@id/switchSkipPleaseChange" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>